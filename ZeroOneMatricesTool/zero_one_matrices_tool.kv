<SelfFormattingText>
    color: (0.0, 0.0, 0.0)
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'

<ScreenBoxLayout>
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Home'

<HomeScreen>
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (0.95, 0.95, 0.95, 1.0)
            Rectangle:
                pos: self.pos
                size: self.size

        SelfFormattingText:
            text: 'Zero-One Matrices Tool'
            font_size: '25sp'
            size_hint: (1, .1)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .8)

            SelfFormattingText:
                text: 'Matrix Size:'
                font_size: '20sp'

            BoxLayout:
                orientation: 'horizontal'

                Widget:
                    size_hint: (.25, 1)

                TextInput:
                    hint_text: 'Enter Size'

                Widget:
                    size_hint: (.25, 1)

            BoxLayout:
                orientation: 'horizontal'

                Widget:
                    size_hint: (.25, 1)

                Button:
                    id: 'enter_matrix_size_button'
                    text: 'Enter'
                    on_press: app.

                Widget:
                    size_hint: (.25, 1)

            SelfFormattingText:
                text: 'Or:'
                font_size: '20sp'

            BoxLayout:
                orientation: 'horizontal'

                Widget:
                    size_hint: (.25, 1)

                Button:
                    id: 'load_matrix_button'
                    text: 'Load Matrix'

                Widget:
                    size_hint: (.25, 1)
        BoxLayout:
            size_hint: (1, .1)